{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["nodes", "root"],
  "properties": {
    "root": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "rule", "sequent", "premises"],
        "properties": {
          "id": { "type": "string" },
          "rule": { "type": "string" },
          "premises": { "type": "array", "items": { "type": "string" } },
          "sequent": {
            "type": "object",
            "required": ["ctx", "goal"],
            "properties": {
              "ctx": { "type": "array" },
              "goal": { "type": "object" }
            }
          }
        }
      }
    }
  }
}
